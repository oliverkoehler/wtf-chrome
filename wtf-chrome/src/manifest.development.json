{
    "manifest_version": 2,
    "name": "WTF Chrome",
    "description": "chrome extension",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*torn.com/*"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}